<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_etax_update_invoice" model="ir.ui.view">
            <field name="name">eTax Update Invoice</field>
            <field name="model">etax.update.invoice</field>
            <field name="arch" type="xml">
                <form string="eTax Invoice">
                    <group>
                        <field name="form_name"/>
                        <field name="reason_update"/>
                    </group>
                    <footer>
                        <button name="print_etax"
                            string="Print" type="object"
                            class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link"
                            special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_update_form_etax" model="ir.actions.act_window">
            <field name="name">eTax Update Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">etax.update.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_etax_update_invoice"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
