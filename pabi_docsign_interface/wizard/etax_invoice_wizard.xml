<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Invoice's Doc Sign Multi-->
        <act_window
          id="action_doc_sign_invoices"
          name="Document Sign"
          src_model="account.invoice"
          res_model="etax.invoice"
          view_type="form"
          view_mode="form"
          key2="client_action_multi"
          target="new"
        />

        <record id="view_etax_invoice" model="ir.ui.view">
            <field name="name">eTax Invoice</field>
            <field name="model">etax.invoice</field>
            <field name="arch" type="xml">
                <form string="eTax Invoice">
                    <group>
                        <field name="form_name"/>
                    </group>
                    <footer>
                        <button name="print_etax"
                            string="Print" type="object"
                            class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link"
                            special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_form_etax" model="ir.actions.act_window">
            <field name="name">eTax Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">etax.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_etax_invoice"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
